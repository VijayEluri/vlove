<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
    <resetJUL>true</resetJUL>
  </contextListener>

  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %p [%c] %m%n</pattern>
    </encoder>
  </appender>
  <logger name="vlove" additivity="false" level="TRACE">
    <appender-ref ref="stdout"/>
  </logger>
  <logger name="vlove.spring.jpa.OptionalOpenEntityManagerInViewFilter" additivity="false" level="WARN">
    <appender-ref ref="stdout"/>
  </logger>
  <logger name="org.hibernate" additivity="false" level="WARN">
    <appender-ref ref="stdout"/>
  </logger>
  <logger name="org.springframework" additivity="false" level="WARN">
    <appender-ref ref="stdout"/>
  </logger>
  <logger name="org.springframework.transaction" additivity="false" level="WARN">
    <appender-ref ref="stdout"/>
  </logger>
  <logger name="org.slf4j" additivity="false" level="WARN">
    <appender-ref ref="stdout"/>
  </logger>
  <root level="TRACE">
    <appender-ref ref="stdout"/>
  </root>
</configuration>